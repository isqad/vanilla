$baseFontSize: 13px;
$baseLineHeight: 16px;

@import "bootstrap";
@import "bootstrap-responsive";

*:focus {
  outline: none !important;
}

body {
  padding-top: 60px;
}

h1, h2, h3 {
  font-weight: normal;
  margin-top: 0;
}

h1 {
  font-size: 18px;
  line-height: 20px;
}

h2 {
  font-size: 16px;
  line-height: 18px;
}

h3 {
  font-size: 14px;
  line-height: 16px;
}

h4, h5, h6 {
  font-size: 13px;
  line-height: 16px;
  font-weight: bold;
}

.navbar {
  .brand {
    color: #000;
    text-shadow: 0 1px 0 rgba(255, 255, 255, 0.1), 0 0 30px rgba(255, 255, 255, 0.125);
    -webkit-transition: all 0.2s linear;
    -moz-transition: all 0.2s linear;
    -ms-transition: all 0.2s linear;
    -o-transition: all 0.2s linear;
    transition: all 0.2s linear;
  }
  ul.nav {
    li.active, li.open {
      a {
        -webkit-transition: all 0.2s linear;
        -moz-transition: all 0.2s linear;
        -ms-transition: all 0.2s linear;
        -o-transition: all 0.2s linear;
        transition: all 0.2s linear;
        i {
          background-image: url("<%= asset_path 'glyphicons-halflings-white.png' %>");
        }
      }
    }
    li {
      a:hover {
        -webkit-transition: all 0.2s linear;
        -moz-transition: all 0.2s linear;
        -ms-transition: all 0.2s linear;
        -o-transition: all 0.2s linear;
        transition: all 0.2s linear;
        i {
          -webkit-transition: all 0.2s linear;
          -moz-transition: all 0.2s linear;
          -ms-transition: all 0.2s linear;
          -o-transition: all 0.2s linear;
          transition: all 0.2s linear;
          background-image: url("<%= asset_path 'glyphicons-halflings-white.png' %>");
        }
      }
    }
  }


  .navbar-search {
    position: relative;
    .icon-search {
      position: absolute;
      left: 11px;
      top: 7px;
    }
    .search-query {
      padding-left: 29px !important;
      -webkit-transition: all 0.2s linear;
      -moz-transition: all 0.2s linear;
      -ms-transition: all 0.2s linear;
      -o-transition: all 0.2s linear;
      transition: all 0.2s linear;
      &:focus {
        width: 300px;
      }
      &:not(:focus) {
        width: 150px;
      }
    }
  }

  .nav-collapse.in {
    .icon-search {
      left: 25px;
      top: 17px;
    }
  }

}

#error_explanation {
  border: 2px solid red;
  padding: 1px;
  padding-bottom: 5px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
  h2 {
    text-align: left;
    font-weight: bold;
    padding: 3px 3px 3px 5px;
    font-size: 12px;
    margin: -7px -3px 7px;
    background-color: #c00;
    color: #fff;
    line-height: 18px;
  }
  p {
    color: #333;
    margin-bottom: 0;
    padding: 1px;
  }
  ul li {
    font-size: 10px;
    list-style: square;
  }
}

.progress {
  height: 5px;
  width: 200px;
}

.new-message {
  width: 640px;
  padding: 20px;
}
