<h3><%= t('users.forgot_password') %></h3>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-vertical' }) do |f| -%>

  <%= f.input :email %>

  <%= f.submit t('users.send_me_reset'), class: 'button small' %>
  <%= link_to t('users.sign_in'), new_user_session_path, class: 'button small secondary' %>
<% end -%>
<%= render 'devise/shared/links' %>
