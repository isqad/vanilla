<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-vertical' }) do |f| -%>
  <%= f.input :email %>
  <%= f.input :password %>

  <% if devise_mapping.rememberable? -%>
    <%= f.input :remember_me, :as => :boolean %>
  <% end -%>

  <%= f.submit t('users.sign_in'), class: 'button small' %>
  <% if devise_mapping.registerable? && controller_name != 'registrations' -%>
    <%= link_to t('users.sign_up'), new_user_registration_path, class: 'button small secondary' %>
  <% end -%>
<% end -%>

<%= render 'devise/shared/links' %>