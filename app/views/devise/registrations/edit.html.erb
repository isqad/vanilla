<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| -%>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password, input_html: { autocomplete: 'off' }, hint: t('users.leave_blank_password') %>
  <%= f.input :password_confirmation %>

  <%= f.submit t('save'), :class => 'button small' %>
<% end -%>

<h5><%= t('users.unhappy') %></h5>
<%= link_to t('users.cancel_account'), registration_path(resource_name), data: { confirm: t('sure') }, method: :delete %>