<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: 'off', class: 'form-vertical' }) do |f| -%>

  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <%= f.submit t('users.sign_up'), class: 'button small' %>
  <%= link_to t('users.sign_in'), new_user_session_path, class: 'button small secondary' %>

<% end -%>
<%= render 'devise/shared/links' %>

