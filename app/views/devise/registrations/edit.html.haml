.span12
  %h1 Settings

  .settings-form
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-vertical' }) do |f|
      = devise_error_messages!

      = f.input :nickname
      = f.input :email, input_html: { placeholder: 'Email' }
      = f.input :password, input_html: { autocomplete: 'off' }, hint: 'leave blank if you don\'t want to change it'
      = f.input :password_confirmation
      = f.input :current_password
      = f.button :submit

    %h3 Cancel my account
    %p
      Unhappy?
      = link_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete

    = link_to 'Back', :back


