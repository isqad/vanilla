<h3><%= t('users.did_not_receive_confirmation_instructions') %></h3>

<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, class: 'form-vertical' }) do |f| %>

  <%= f.input :email %>

  <%= f.submit t('users.resend_confirmation'), :class => 'button small' %>
  <%= link_to t('users.sign_in'), new_user_session_path, :class => 'button small secondary' %>
<% end %>

<%= render 'devise/shared/links' %>
