<%= simple_form_for User.new, :url => password_path, :html => { :class => 'form_vertical' } do |f| %>
  <%= f.input :email %>

  <%= f.submit t('users.send_me_reset'), :class => 'button small' %>
  <%= link_to t('users.sign_in'), new_user_session_path, :class => 'button small secondary' %>
<% end %>