<%= simple_form_for @user_session, :url => user_session_path, :html => { :class => 'form_vertical' } do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>

  <%= f.input :remember_me, :as => :boolean %>

  <%= f.submit t('users.sign_in'), :class => 'button small' %>
  <%= link_to t('users.sign_up'), new_registration_path, :class => 'button small secondary' %>

  <ul class="side-nav">
    <li><%= link_to t('users.forgot_password'), new_password_path %></li>
  </ul>
<% end %>