!!! 5
%html{ lang: I18n.locale, :'ng-app' => 'vanilla'}
  %head
    %meta{charset: 'utf-8'}
    %title
      Dating
    = stylesheet_link_tag :application
    = csrf_meta_tag
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{data: { toggle: 'collapse', target: '.nav-collapse' } }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Vanilla', '/#!/home', class: 'brand'

          .nav-collapse.collapse
            %ul.nav
              %li
                = link_to '/#!/messages' do
                  %i.icon-comment
                  Messages
              %li
                = link_to '/#!/notify' do
                  %i.icon-globe
                  Notify
                  %span.badge.badge-success{:'ng-show' => 'notifySize > 0'}
                    {{notifySize}}


            %ul.nav.pull-right
              %li.divider-vertical
              %li.dropdown
                = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                  %i.icon-user
                  Username
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to 'Edit profile', '/#!/profile/edit'
                  %li= link_to 'Settings', edit_user_registration_path
                  %li.divider
                  %li= link_to t('users.sign_out'), destroy_user_session_path, method: :delete


            %form.navbar-search.pull-right
              %input.search-query{type: 'text', placeholder: 'Search...', :'on-search' => '' }
              .icon-search

    .container
      = render 'shared/notice', notice: notice if notice
      = render 'shared/alert', alert: alert if alert
      .row= yield

    -# :javascript
      -# document.write("<script type=\"text/javascript\" src=\"" + window.location.protocol + "//" + window.location.hostname + ":9292/faye.js\"><\/script>")
    = javascript_include_tag :application
