<%= simple_form_for @user, :url => registration_path, :html => { :class => 'form_vertical' } do |f| %>
  <%= f.input :email %>
  <%= f.input :username %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <%= f.submit t('users.sign_up'), :class => 'button small' %>
  <%= link_to t('users.sign_in'), new_user_session_path, :class => 'button small secondary' %>
<% end %>